NAMESPACE:
	echo "# Generated by roxygen2: do not edit by hand" > NAMESPACE

check: NAMESPACE
	Rscript -e "results <- devtools::check(); stopifnot(length(results[['errors']]) == 0)"

install: NAMESPACE
	Rscript -e "devtools::install()"

html: NAMESPACE
	Rscript -e "devtools::document(); pkgdown::build_site()"
